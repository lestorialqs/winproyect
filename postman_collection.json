        {
          "name": "Crear Servicio",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"name\": \"Nombre del servicio\",\n\t\"description\": \"Descripción del servicio\",\n\t\"tags\": [\"tag1\", \"tag2\"],\n\t\"price\": 100.00,\n\t\"location\": \"Ubicación del servicio\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/service",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "service"
